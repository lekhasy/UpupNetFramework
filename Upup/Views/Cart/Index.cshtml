@using Upup.Models
@model Customer
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="cart">
    <h2>Tạo PO đơn hàng</h2>
    <table class="cart">
        <tbody>
            <tr>
                <td><label>Tên PO</label></td>
                <td class="large"><input type="text" class="form-control" /></td>
                <td><label>Mã khách hàng</label></td>
                <td class="small"><div id="customerCode">@Model.Id</div></td>
            </tr>
            <tr>
                <td><label>Tên khách hàng</label></td>
                <td class="large"><div id="customerName">@Model.FullName</div></td>
                <td><label>Mã PO</label></td>
                <td class="small"><div id="PoCode"></div></td>
            </tr>
            <tr>
                <td><label>Địa chỉ</label></td>
                <td class="large"><div id="customerAddress">@Model.Address1</div></td>
                <td colspan="2" rowspan="4"><label>Barcode</label></td>
            </tr>
            <tr>
                <td><label>Số điện thoại</label></td>
                <td class="large"><div id="customerPhone">@Model.PhoneNumber</div></td>
            </tr>
            <tr>
                <td><label>Email</label></td>
                <td class="large"><div id="customerEmail">@Model.Email</div></td>
            </tr>
            <tr>
                <td><label>Website</label></td>
                <td class="large"><div id="customerWebsite">@Model.Webiste</div></td>
            </tr>
        </tbody>
    </table>
    <h2>Thông tin sản phẩm</h2>
    <div class="area-button">
        <a href="javascript:void(0)" class="btn btn-danger act-del">Xóa</a>
        <a href="javascript:void(0)" class="btn btn-success">Thêm</a>
    </div>
    <table id="example1" class="table table-bordered table-striped display">
        <thead>
            <tr>
                <th class="check-all"><input type="checkbox" name="select_all" value="1" id="example-select-all"></th>
                <th>Stt</th>
                <th>Mã sản phẩm</th>
                <th>Mã biến thể</th>
                <th>Số lượng</th>
                <th>Đơn vị</th>
                <th>Tên sản phẩm</th>
                <th>Tên biến thể</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
                <th>Ngày giao</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div class="area-button row">
        <a href="javascript:void(0)" class="btn btn-warning pull-right">Kiểm tra</a>
        <a href="javascript:void(0)" class="btn btn-danger act-del">Xóa</a>
        <a href="javascript:void(0)" class="btn btn-success">Thêm</a>
    </div>
    <div class="area-button text-center">
        <a href="javascript:void(0)" class="btn btn-primary">Báo giá</a>
        <a href="javascript:void(0)" class="btn btn-primary">Lưu PO</a>
        <a href="javascript:void(0)" class="btn btn-primary">Đặt hàng</a>
    </div>
</div>


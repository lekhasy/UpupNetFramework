@using System.Web.Configuration
@model Upup.Models.PostCategory
@{
    ViewBag.Title = "User manual guide";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.RootCategory = "guides";
}

<div class="subject-category">
    <div class="row">
        <div class="col-md-3">
            @{Html.RenderPartial("_MenuPostPartial");}
        </div>
        <div class="col-md-9">
            <div class="poster" style="background:url('/Images/Settings/@WebConfigurationManager.AppSettings["GuideBannerUrl"]') no-repeat; background-size: 100%;">
                <div class="slogan">
                    <div>
                        <div>
                            <h2>@Html.Raw(HttpUtility.HtmlDecode(WebConfigurationManager.AppSettings["GuideSlogan"]))</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
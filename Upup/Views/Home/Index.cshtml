<div id="topHomeBody">
    <div class="row">
        <div class="col-md-8">
            <div class="area-menu">
                @{Html.RenderPartial("_MenuPartial", Model.Categories);}
            </div>
            <div class="area-slider">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/Images/banners/banner-1.jpg" alt="ASP.NET" class="img-responsive" />
                            <div class="carousel-caption" role="option">
                                <p>
                                    Learn how to build ASP.NET apps that can run anywhere.
                                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                                        Learn More
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/Images/banners/banner-2.jpg" alt="Visual Studio" class="img-responsive" />
                            <div class="carousel-caption" role="option">
                                <p>
                                    There are powerful features in Visual Studio for building modern web apps.
                                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                                        Learn More
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/Images/banners/banner-3.jpg" alt="Package Management" class="img-responsive" />
                            <div class="carousel-caption" role="option">
                                <p>
                                    Bring in libraries from NuGet, Bower, and npm, and automate tasks using Grunt or Gulp.
                                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                                        Learn More
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/Images/banners/banner-4.jpg" alt="Microsoft Azure" class="img-responsive" />
                            <div class="carousel-caption" role="option">
                                <p>
                                    Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                                        Learn More
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div id="bottomHomeBody">
                <div class="row">
                    <div class="area-head-category">
                        <div>
                            @foreach (var categoryLevel1 in Model.Categories)
                            {
                                if (categoryLevel1.ChildCategories.Count > 0)
                                {
                                    <div class="category-caption">
                                        <h2>@categoryLevel1.Name</h2>
                                    </div>
                                    <div class="item active">
                                        <ul class="product-category-items">
                                            @foreach (var categoryLevel2 in categoryLevel1.ChildCategories)
                                            {
                                                <li>
                                                    @{ Html.RenderPartial("_ProductCategoryItemPartial", categoryLevel2); }
                                                </li>
                                                        }
                                        </ul>
                                    </div>
                                                            }
                                                        }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="area-contact">
                <div class="content-wrapper">
                    <h3>Chăm sóc khách hàng</h3>
                    @if (Model.UserGuides != null && Model.UserGuides.Count() > 0)
                    {
                        <div class="support">
                            <ul>
                                @foreach (var guide in Model.UserGuides)
                                {
                                    <li><a href="@Url.Action("Index","Post", new { id = guide.Id })">@guide.Title</a></li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="detail">
                        <ul class="contact">
                            <li><span class="bold">Số điện thoại:</span><br> <strong>@WebConfigurationManager.AppSettings["Phone"]</strong></li>
                            <li><span class="bold">Số Fax:</span><br> <strong>@WebConfigurationManager.AppSettings["Fax"]</strong></li>
                            <li><span class="bold">Hộp thư:</span> <strong>@WebConfigurationManager.AppSettings["Email"]</strong></li>
                        </ul>
                        <ul class="hour">
                            <li>
                                @Html.Raw(HttpUtility.HtmlDecode(@WebConfigurationManager.AppSettings["WorkTime"]))
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

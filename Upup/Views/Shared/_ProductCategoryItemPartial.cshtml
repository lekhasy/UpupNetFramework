@model Upup.Models.Category
<div class="product-category-item">
    <a href="/ProductCategory/Index/@Model.Id">
        <span class="product-category-item-title lang-vi">@Model.Name</span>
        <span class="product-category-item-title lang-en">@Model.Name_en</span>
        <span class="lang-vi">@Html.Raw(Model.Description)</span>
        <span class="lang-en">@Html.Raw(Model.Description_en)</span>
        <img src="/Images/Categories/@Model.ImageUrl" alt="Linear Motion">
    </a>
</div>

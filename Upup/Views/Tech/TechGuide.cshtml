@using System.Web.Configuration
@model Upup.Models.PostCategory
@{
    ViewBag.Title = "TechGuide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="subject-category">
    <div class="row">
        <div class="col-md-3">
            @{Html.RenderPartial("_MenuPostPartial", Model);}
        </div>
        <div class="col-md-9">
            <div class="poster">
                <img src="~/Images/Settings/@WebConfigurationManager.AppSettings["TechBannerUrl"]" />
                <div class="slogan">
                    <div>
                        <div>
                            <h2>@Html.Raw(HttpUtility.HtmlDecode(WebConfigurationManager.AppSettings["TechSlogan"]))</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>